<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme is the default theme. -->
    <style name="Theme" parent="android:Theme"></style>

    <!-- Variation on the Light theme that turns off the title -->
    <style name="Theme.BatteryWidget" parent="android:style/Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

	<style name="BatteryLevelBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/widget_height</item>
        <item name="android:background">@null</item>
        <item name="android:padding">2dip</item>
        <item name="android:orientation">vertical</item>
    </style>
	
	<style name="ProgressBarImage">
		<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/battery_indicator_height</item>
        <item name="android:layout_margin">2dip</item>
        <item name="android:src">@drawable/battery_level_indicator</item>
	</style>
	
	
    <style name="BatteryLevelTextSm">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/battery_level_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/battery_height</item>
        <item name="android:background">@null</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:padding">2dip</item>
    </style>

	<style name="BatteryLevelTextMed">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/battery_level_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/battery_height</item>
        <item name="android:background">@null</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:padding">2dip</item>
    </style>
    
    <style name="BatteryLevelTextLg">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/battery_level_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/battery_height</item>
        <item name="android:background">@null</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:padding">2dip</item>
    </style>

 	<style name="Separator">
        <item name="android:layout_height">@dimen/separator_width</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:background">@color/separator_bar</item>
    </style>
    
    <!--  For the Settings Page -->
     <style name="TitleBar">
         <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/title_height</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/title_background</item>
    </style>
    
     <style name="TitleBarContent">
         <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/title_background</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    
    <style name="BarSeparator">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/title_separator_height</item>
        <item name="android:background">@color/title_separator</item>
    </style>
    
    <style name="TitleIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/title_icon_height</item>
        <item name="android:src">@drawable/icon</item>
        <item name="android:padding">5dip</item>
    </style>
    
    <style name="TitleBarText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/title_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
