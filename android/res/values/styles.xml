<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme is the default theme. -->
    <style name="Theme" parent="android:Theme"></style>

    <!-- Variation on the Light theme that turns off the title -->
    <style name="Theme.BatteryWidget" parent="android:style/Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

	<style name="BatteryLevelBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/widget_height</item>
        <item name="android:background">@null</item>
        <item name="android:padding">2dip</item>
        <item name="android:orientation">vertical</item>
    </style>

	<style parent="@android:style/Widget.ProgressBar.Horizontal" name="ProgressBar">
		<item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_custom</item>
    	<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/battery_indicator_height</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:indeterminate">false</item>
	</style>
	
    <style name="BatteryLevelText">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/battery_level_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/battery_height</item>
        <item name="android:background">@null</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:padding">2dip</item>
    </style>

 	<style name="Separator">
        <item name="android:layout_height">@dimen/separator_width</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:background">@color/separator_bar</item>
    </style>

</resources>
